package exercicio;
import java.util.Scanner;
public class exercicios {
	public static void main(String[]args) {
Scanner sc = new Scanner(System.in);

System.out.print("Digite um n√∫mero:");
int num = sc.nextInt();
int resultado = 0;

for(int i = 1; i <= num; i++) {
resultado += i;	
}
System.out.println("Resultado: " +resultado);

sc.close();
	}
}
